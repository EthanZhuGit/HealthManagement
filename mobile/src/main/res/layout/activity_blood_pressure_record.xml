<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.healthmanagement.activity.BloodPressureRecordActivity">

    <include layout="@layout/tool_bar"
        android:id="@+id/include"/>

    <Button
        android:id="@+id/btn_set_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="日期"
        android:layout_below="@id/include"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_set_date"
        android:layout_below="@+id/btn_set_date"
        android:text="时间"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_set_time"
        android:text="血压值                                  无连接设备"
        android:layout_alignParentEnd="true" />


    <RelativeLayout
        android:id="@+id/high_blood_pressure_choose"
        android:layout_below="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/textView3"
            android:text="收缩压（mmHg）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_alignTop="@+id/txt_high_num"
            android:layout_toStartOf="@+id/txt_high_num" />
        <TextView
            android:id="@+id/txt_high_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65kg"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <com.lost.zou.scaleruler.view.DecimalScaleRulerView
            android:id="@+id/high"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/txt_high_num"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:id="@+id/imageView3"
            android:src="@drawable/weight_set_target_arrow"
            android:layout_width="24dp"
            android:layout_height="71dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_high_num"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>



    <TextView
        android:id="@+id/fengexian"
        android:layout_below="@+id/high_blood_pressure_choose"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>



    <RelativeLayout
        android:id="@+id/low_blood_pressure_choose"
        android:layout_below="@+id/fengexian"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/textView2"
            android:text="收缩压（mmHg）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_alignTop="@+id/txt_low_num"
            android:layout_toStartOf="@+id/txt_low_num" />
        <TextView
            android:id="@+id/txt_low_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65kg"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"  />

        <com.lost.zou.scaleruler.view.DecimalScaleRulerView
            android:id="@+id/low"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/txt_low_num"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/weight_set_target_arrow"
            android:layout_width="24dp"
            android:layout_height="71dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_low_num"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:src="@drawable/ic_confirm"/>

</RelativeLayout>
